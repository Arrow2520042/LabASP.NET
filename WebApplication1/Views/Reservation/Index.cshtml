@model List<WebApplication1.Models.Reservation>

@{
    ViewData["Title"] = "Lista rezerwacji";
}

<h1>Wszystkie rezerwacje</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nową</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Miasto</th>
        <th>Adres</th>
        <th>Właściciel</th>
        <th>Data</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.City</td>
            <td>@item.Address</td>
            <td>@item.Owner</td>
            <td>@item.Date?.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Poprzednia</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Następna</a>
            </li>
        </ul>
    </nav>
}