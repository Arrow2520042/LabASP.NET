@model WebApplication1.Models.Reservation

@{
    ViewData["Title"] = "Potwierdzenie rezerwacji";
}

<div class="alert alert-success mt-4">
    <h1 class="display-4">Rezerwacja przyjęta</h1>
    <hr />
    <dl class="row fs-5">
        <dt class="col-sm-3">Data:</dt>
        <dd class="col-sm-9">@Model.Date?.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-3">Miasto:</dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">Adres:</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Pokój:</dt>
        <dd class="col-sm-9">@Model.RoomName</dd>

        <dt class="col-sm-3">Właściciel:</dt>
        <dd class="col-sm-9">@Model.Owner</dd>
        
        <dt class="col-sm-3">Cena:</dt>
        <dd class="col-sm-9">@Model.Price?.ToString("C")</dd>
    </dl>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-success">Nowa rezerwacja</a>
    </div>
</div>